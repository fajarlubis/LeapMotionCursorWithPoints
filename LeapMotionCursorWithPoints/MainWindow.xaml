<Window x:Class="LeapMotionCursorWithPoints.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LeapMotionCursorWithPoints"
        mc:Ignorable="d"
        Title="Preview" Height="300" Width="400" Opacity="0.7" WindowStyle="None" AllowsTransparency="True" Topmost="True" Loaded="Window_Loaded">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="33*"/>
            <ColumnDefinition Width="146*"/>
            <ColumnDefinition Width="221*"/>
        </Grid.ColumnDefinitions>
        <InkPresenter Name="paintCanvas" Grid.ColumnSpan="3"></InkPresenter>
        <Label x:Name="Label" Grid.Column="1" Content="Label" HorizontalAlignment="Left" Margin="37,66,0,0" VerticalAlignment="Top"/>
        <Label x:Name="Label_Copy" Grid.Column="1" Content="Label" HorizontalAlignment="Left" Margin="35,97,0,0" VerticalAlignment="Top"/>
    </Grid>
</Window>
